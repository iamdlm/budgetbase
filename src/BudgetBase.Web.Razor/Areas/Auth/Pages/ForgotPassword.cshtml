@page "/auth/recover"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<form method="post">
    <a asp-area="" asp-page="Index"><img src="~/assets/images/logo-dark.png" class="mb-4 d-block mx-auto" alt=""></a>
    <h5 class="mb-3 text-center">Reset your password</h5>

    <p class="text-muted">Please enter your email address. You will receive a link to create a new password via email.</p>

    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Input.Email" class="form-label"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button class="btn btn-dark w-100" type="submit">Send</button>

    <div class="col-12 text-center mt-3">
        <p class="mb-0 mt-3"><small class="text-dark me-2">Remember your password?</small> <a asp-area="Auth" asp-page="Login" class="text-dark fw-bold">Sign in</a></p>
    </div><!--end col-->

    <p class="mb-0 text-muted mt-3 text-center">© @DateTime.UtcNow.Year budgetbase.</p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
