@page "/auth/signin"
@model LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<form id="account" method="post">
    <a asp-area="" asp-page="Index">
        <img src="~/assets/images/logo-dark.png" class="mb-4 d-block mx-auto logo-light-mode" alt="">
        <img src="~/assets/images/logo-light.png" class="mb-4 d-block mx-auto logo-dark-mode" alt="">
    </a>
    <h5 class="mb-3 text-center">Sign in to your Account</h5>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Input.Email" class="form-label">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
        <label asp-for="Input.Password" class="form-label">Password</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe">
                <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
            </div>
        </div>
        <p class="forgot-pass mb-0">
            <a asp-area="Auth" asp-page="ForgotPassword" class="text-dark small fw-bold">Forgot your password?</a>
        </p>
    </div>

    <button class="btn btn-dark w-100" type="submit">Sign in</button>

    <div class="col-12 text-center mt-3">
        <p class="mb-0 mt-3"><small class="text-dark me-2">Don't have an account ?</small> <a asp-area="Auth" asp-page="Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark fw-bold">Sign Up</a></p>
    </div><!--end col-->

    <p class="mb-0 text-muted mt-3 text-center">© @DateTime.UtcNow.Year budgetbase.</p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
