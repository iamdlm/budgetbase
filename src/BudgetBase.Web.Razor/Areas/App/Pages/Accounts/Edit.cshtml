@page
@model BudgetBase.Web.Razor.Areas.App.Pages.Accounts.AccountEditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="d-md-flex justify-content-between align-items-center">
    <h5 class="mb-0 d-none d-lg-block">@ViewData["Title"]</h5>

    @await Component.InvokeAsync("Breadcrumb", new { breadcrumbModels = Model.Breadcrumbs })
</div>
<div class="row">
    <div class="col-md-12 mt-4">
        <div class="card rounded shadow">
            <div class="p-4 border-bottom">
                <h5 class="title mb-0">Account</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Account.Id" />
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Account.Name" class="form-control" />
                            <label asp-for="Account.Name"></label>
                            <span asp-validation-for="Account.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Account.Number" class="form-control" />
                            <label asp-for="Account.Number"></label>
                            <span asp-validation-for="Account.Number" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Account.IBAN" class="form-control" />
                            <label asp-for="Account.IBAN"></label>
                            <span asp-validation-for="Account.IBAN" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-dark" />
                        <a class="btn btn-outline-primary" asp-page="./Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
