@page
@using BudgetBase.Core.Domain.Entities;
@model BudgetBase.Web.Razor.Areas.App.Pages.Transactions.TransactionEditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="d-md-flex justify-content-between align-items-center">
    <h5 class="mb-0  d-none d-lg-block">@ViewData["Title"]</h5>

    @await Component.InvokeAsync("Breadcrumb", new { breadcrumbModels = Model.Breadcrumbs })
</div>
<div class="row">
    <div class="col-md-12 mt-4">
        <div class="card rounded shadow">
            <div class="p-4 border-bottom-zinc-200">
                <h5 class="title mb-0">Transaction</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Transaction.Id" />
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Transaction.Description" class="form-control" />
                            <label asp-for="Transaction.Description"></label>
                            <span asp-validation-for="Transaction.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Transaction.Amount" class="form-control" type="text" />
                            <label asp-for="Transaction.Amount"></label>
                            <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Transaction.Date" class="form-control" />
                            <label asp-for="Transaction.Date"></label>
                            <span asp-validation-for="Transaction.Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <select asp-for="Transaction.SourceAccountId" class="form-control" asp-items="@(ViewData["SourceAccountId"] as SelectList)">
                                <option value=""></option>
                            </select>
                            <label asp-for="Transaction.SourceAccountId" class="control-label"></label>
                            <span asp-validation-for="Transaction.SourceAccountId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <select asp-for="Transaction.TargetAccountId" class="form-control" asp-items="@(ViewData["TargetAccountId"] as SelectList)">
                                <option value=""></option>
                            </select>
                            <label asp-for="Transaction.TargetAccountId" class="control-label"></label>
                            <span asp-validation-for="Transaction.TargetAccountId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <select asp-for="Transaction.TransactionCategoryId" class="form-control" asp-items="@(ViewData["TransactionCategoryId"] as SelectList)">
                                <option value=""></option>
                            </select>
                            <label asp-for="Transaction.TransactionCategoryId" class="control-label"></label>
                            <span asp-validation-for="Transaction.TransactionCategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <select asp-for="Transaction.RecurrencyTypeId" class="form-control" asp-items="@(ViewData["RecurrencyTypeId"] as SelectList)">
                                <option value=""></option>
                            </select>
                            <label asp-for="Transaction.RecurrencyTypeId" class="control-label"></label>
                            <span asp-validation-for="Transaction.RecurrencyTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-dark" />
                        <a class="btn btn-outline-dark" asp-page="./Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        const amountElement = document.getElementById('Transaction_Amount');
        const amountMaskOptions = {
            mask: Number,  // enable number mask

            // other options are optional with defaults below
            scale: 2,  // digits after point, 0 for integers
            thousandsSeparator: ',',  // any single char
            radix: '.',  // fractional delimiter
        };
        IMask(amountElement, amountMaskOptions);
    </script>
}
