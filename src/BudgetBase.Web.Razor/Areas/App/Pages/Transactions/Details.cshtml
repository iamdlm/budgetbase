@page
@model BudgetBase.Web.Razor.Areas.App.Pages.Transactions.TransactionDetailsModel
@{
    ViewData["Title"] = "Details";
}
<div class="d-md-flex justify-content-between align-items-center">
    <h5 class="mb-0  d-none d-lg-block">@ViewData["Title"]</h5>

    @await Component.InvokeAsync("Breadcrumb", new { breadcrumbModels = Model.Breadcrumbs })
</div>
<div class="row">
    <div class="col-md-12 mt-4">
        <div class="card rounded shadow">
            <div class="p-4 border-bottom">
                <h5 class="title mb-0">Transaction</h5>
            </div>
            <div class="card-body">
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Transaction.Description" class="form-control" disabled />
                        <label asp-for="Transaction.Description"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Transaction.Amount" class="form-control" disabled />
                        <label asp-for="Transaction.Amount"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Transaction.Date" class="form-control" disabled />
                        <label asp-for="Transaction.Date"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <select asp-for="Transaction.SourceAccountId" class="form-control" asp-items="@(ViewData["SourceAccountId"] as SelectList)" disabled>
                            <option value=""></option>
                        </select>
                        <label asp-for="Transaction.SourceAccountId" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <select asp-for="Transaction.TargetAccountId" class="form-control" asp-items="@(ViewData["TargetAccountId"] as SelectList)" disabled>
                            <option value=""></option>
                        </select>
                        <label asp-for="Transaction.TargetAccountId" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <select asp-for="Transaction.TransactionCategoryId" class="form-control" asp-items="@(ViewData["TransactionCategoryId"] as SelectList)" disabled>
                            <option value=""></option>
                        </select>
                        <label asp-for="Transaction.TransactionCategoryId" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <select asp-for="Transaction.TransactionEntryTypeId" class="form-control" asp-items="@(ViewData["TransactionEntryTypeId"] as SelectList)" disabled>
                            <option value=""></option>
                        </select>
                        <label asp-for="Transaction.TransactionEntryTypeId" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <select asp-for="Transaction.RecurrencyTypeId" class="form-control" asp-items="@(ViewData["RecurrencyTypeId"] as SelectList)" disabled>
                            <option value=""></option>
                        </select>
                        <label asp-for="Transaction.RecurrencyTypeId" class="control-label"></label>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <a class="btn btn-dark" asp-page="./Edit" asp-route-id="@Model.Transaction?.Id">Edit</a>
                    <a class="btn btn-outline-dark" asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
