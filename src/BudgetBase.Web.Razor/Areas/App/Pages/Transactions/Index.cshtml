@page
@model BudgetBase.Web.Razor.Areas.App.Pages.Transactions.TransactionIndexModel

@{
    ViewData["Title"] = "Transactions";
}
@Html.AntiForgeryToken()
<div class="d-md-flex justify-content-between align-items-center">
    <h5 class="mb-0  d-none d-lg-block">@ViewData["Title"]</h5>

    @await Component.InvokeAsync("Breadcrumb", new { breadcrumbModels = Model.Breadcrumbs })
</div>
<div class="row">
    <div class="col-md-12 mt-4">
        <div class="card rounded">
            @await Component.InvokeAsync("Tabulator", new { ajaxUrl = "Transactions?handler=RemoteData", allowImport = true, applyRules = true })
        </div>
    </div>
</div>

@section Styles {
    @{
        await Html.RenderPartialAsync("_IconPickerCss");
    }
}
@section Scripts {
    <script type="text/javascript" src="~/dist/js/rules.js" asp-append-version="true"></script>
}
