@page
@using BudgetBase.Core.Domain.Entities;
@model BudgetBase.Web.Razor.Areas.App.Pages.RulesGroups.RulesGroupEditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="d-md-flex justify-content-between align-items-center">
    <h5 class="mb-0  d-none d-lg-block">@ViewData["Title"]</h5>

    @await Component.InvokeAsync("Breadcrumb", new { breadcrumbModels = Model.Breadcrumbs })
</div>
<div class="row">
    <div class="col-md-12 mt-4">
        <div class="card rounded shadow">
            <div class="p-4 border-bottom d-flex align-items-center">
                <h5 class="title mb-0">Categorization</h5>
                <a class="btn btn-dark ms-auto" asp-page="./Rules/Index" asp-route-groupId="@Model.RulesGroup.Id">Add Rules</a>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="RulesGroup.Id" />
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="RulesGroup.Name" class="form-control" />
                            <label asp-for="RulesGroup.Name"></label>
                            <span asp-validation-for="RulesGroup.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <select asp-for="RulesGroup.TransactionCategoryId" class="form-control" asp-items="@(ViewData["TransactionCategoryId"] as SelectList)">
                                <option value=""></option>
                            </select>
                            <label asp-for="RulesGroup.TransactionCategoryId" class="control-label"></label>
                            <span asp-validation-for="RulesGroup.TransactionCategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <select asp-for="RulesGroup.TransactionRulesGroupOperatorId" class="form-control" asp-items="@(ViewData["TransactionRulesGroupOperatorId"] as SelectList)">
                                <option value=""></option>
                            </select>
                            <label asp-for="RulesGroup.TransactionRulesGroupOperatorId" class="control-label"></label>
                            <span asp-validation-for="RulesGroup.TransactionRulesGroupOperatorId" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-dark" />
                        <a class="btn btn-outline-dark" asp-page="./Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
