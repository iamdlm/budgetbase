@page
@model DashboardModel
@{
}
@Html.AntiForgeryToken()
<div class="d-flex align-items-center justify-content-between">
    <div>
        <h5 class="mb-0">Welcome back</h5>
    </div>

    <div class="mb-0 position-relative">
        <select class="form-select form-control" id="timeperiod" onchange="refreshDashboard();">
            <option value="month">This Month</option>
            <option value="quarter">This Quarter</option>
            <option value="semester">This Semester</option>
            <option value="year">This Year</option>
            <option value="all">All Time</option>
        </select>
    </div>
</div>

<div class="row row-cols-xl-5 row-cols-md-2 row-cols-1">
    <div class="col mt-4">
        <div class="features feature-dark d-flex justify-content-between align-items-center border-zinc-200 rounded p-3">
            <div class="d-flex align-items-center">
                <div class="icon text-center rounded-pill">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" height="30">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 0 0-3.7-3.7 48.678 48.678 0 0 0-7.324 0 4.006 4.006 0 0 0-3.7 3.7c-.017.22-.032.441-.046.662M19.5 12l3-3m-3 3-3-3m-12 3c0 1.232.046 2.453.138 3.662a4.006 4.006 0 0 0 3.7 3.7 48.656 48.656 0 0 0 7.324 0 4.006 4.006 0 0 0 3.7-3.7c.017-.22.032-.441.046-.662M4.5 12l3 3m-3-3-3 3" />
                    </svg>
                </div>
                <div class="flex-1 ms-3">
                    <span class="mb-0 text-muted">Net</span>
                    <p class="fs-5 text-dark fw-bold mb-0"><span id="dashboard-net">0</span></p>
                </div>
            </div>
        </div>
    </div><!--end col-->

    <div class="col mt-4">
        <div class="features feature-dark d-flex justify-content-between align-items-center border-zinc-200 rounded p-3">
            <div class="d-flex align-items-center">
                <div class="icon text-center rounded-pill">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" height="30">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
                    </svg>
                </div>
                <div class="flex-1 ms-3">
                    <span class="mb-0 text-muted">Income</span>
                    <p class="fs-5 text-dark fw-bold mb-0"><span id="dashboard-income">0</span></p>
                </div>
            </div>
        </div>
    </div><!--end col-->

    <div class="col mt-4">
        <div class="features feature-dark d-flex justify-content-between align-items-center border-zinc-200 rounded p-3">
            <div class="d-flex align-items-center">
                <div class="icon text-center rounded-pill">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" height="30">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5" />
                    </svg>
                </div>
                <div class="flex-1 ms-3">
                    <span class="mb-0 text-muted">Expenses</span>
                    <p class="fs-5 text-dark fw-bold mb-0"><span id="dashboard-expenses">0</span></p>
                </div>
            </div>
        </div>
    </div><!--end col-->

    <div class="col mt-4">
        <div class="features feature-dark d-flex justify-content-between align-items-center border-zinc-200 rounded p-3">
            <div class="d-flex align-items-center">
                <div class="icon text-center rounded-pill">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" height="30">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                    </svg>

                </div>
                <div class="flex-1 ms-3">
                    <span class="mb-0 text-muted">Transfers</span>
                    <p class="fs-5 text-dark fw-bold mb-0"><span id="dashboard-transfers">0</span></p>
                </div>
            </div>
        </div>
    </div><!--end col-->

    <div class="col mt-4">
        <div class="features feature-dark d-flex justify-content-between align-items-center border-zinc-200 rounded p-3">
            <div class="d-flex align-items-center">
                <div class="icon text-center rounded-pill">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" height="30">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m3 3 1.664 1.664M21 21l-1.5-1.5m-5.485-1.242L12 17.25 4.5 21V8.742m.164-4.078a2.15 2.15 0 0 1 1.743-1.342 48.507 48.507 0 0 1 11.186 0c1.1.128 1.907 1.077 1.907 2.185V19.5M4.664 4.664 19.5 19.5" />
                    </svg>
                </div>
                <div class="flex-1 ms-3">
                    <span class="mb-0 text-muted">Uncategorized</span>
                    <p class="fs-5 text-dark fw-bold mb-0"><span id="dashboard-uncategorized">0</span></p>
                </div>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->

<div class="row">
    <div class="col-xl-8 col-lg-7 mt-4 rounded">
        <div class="card h-100 border-zinc-200">
            <div class="p-4 border-bottom">
                <div class="d-flex justify-content-between">
                    <span class="mb-0 text-muted">Income & Expenses by Category</span>
                </div>
            </div>
            <div id="pl-chart" class="p-4"></div>
        </div>
    </div><!--end col-->

    <div class="col-xl-4 col-lg-5 mt-4 rounded">
        <div class="card h-100 border-zinc-200">
            <div class="p-4 border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="mb-0 text-muted">Distribution by Category</span>
                    <div class="mb-0 position-relative">
                        <select class="form-select form-control" id="pietype" onchange="getPieData();">
                            <option value="income" selected>Income</option>
                            <option value="expense">Expenses</option>
                            <option value="transfer">Transfers</option>
                        </select>
                    </div>
                </div>
            </div>

            <div id="pie-chart" class="d-flex justify-content-center align-items-center h-100 p-4"></div>
        </div>
    </div><!--end col-->
</div><!--end row-->

<div class="row">
    <div class="col-xl-4 col-lg-5 mt-4 rounded">
        <div class="card h-100 border-zinc-200">
            <div class="p-4 border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="mb-0 text-muted">Recurring Transactions</span>
                    <div class="mb-0 position-relative">
                        <select class="form-select form-control" id="rectype" onchange="getRecurringData();">
                            <option value="income" selected>Income</option>
                            <option value="expense">Expenses</option>
                            <option value="transfer">Transfers</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="p-4" data-simplebar style="height: 365px;">
                <div class="table-responsive">
                    <table class="table mb-0 table-center">
                        <thead>
                            <tr>
                                <th scope="col" class="border-bottom">Frequency</th>
                                <th scope="col" class="border-bottom">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!--end col-->

    <div class="col-xl-4 col-lg-5 mt-4 rounded">
        <div class="card h-100 border-zinc-200">
            <div class="p-4 border-bottom">
                <div class="d-flex justify-content-between">
                    <span class="mb-0 text-muted">Budget</span>
                    <span class="badge rounded-pill bg-soft-primary">Coming Soon</span>
                </div>
            </div>

            <div id="bg-chart" class="p-4"></div>
        </div>
    </div><!--end col-->

    <div class="col-xl-4 col-lg-5 mt-4 rounded">
        <div class="card h-100 border-zinc-200">
            <div class="p-4 border-bottom">
                <div class="d-flex align-items-center gap-1">
                    <span class="mb-0 text-muted">50/30/20 Principle</span>
                    <a href="javascript:void" data-bs-toggle="modal" data-bs-target="#sim-popup">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" height="25">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
                        </svg>
                    </a>
                </div>
            </div>

            <div id="sim-chart" class="d-flex justify-content-center align-items-center h-100 p-4"></div>
        </div>
    </div><!--end col-->

</div><!--end row-->
<div class="modal fade" id="sim-popup" tabindex="-1" aria-labelledby="sim-title" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded border-zinc-200">
            <div class="modal-header border-bottom">
                <h5 class="modal-title" id="sim-title">50/30/20 Principle</h5>
                <button type="button" class="btn btn-icon btn-close" data-bs-dismiss="modal" id="close-modal"><i class="uil uil-times fs-4 text-dark"></i></button>
            </div>
            <div class="modal-body">
                <p class="text-muted mb-0">The 50/30/20 rule is a budgeting technique that involves dividing your money into three primary categories based on your after-tax income (i.e., your take-home pay): 50% to needs, 30% to wants and 20% to savings and debt payments.</p>
                <p class="text-muted mb-0">This chart displays the total income amount, in the selected period, distributed by those three categories.</p>
            </div> 
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/dist/libs/apexcharts/apexcharts.min.js"></script>
    <script type="text/javascript" src="~/dist/js/chart.sim.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/dist/js/chart.counters.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/dist/js/chart.pl.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/dist/js/chart.pie.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/dist/js/chart.rec.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/dist/js/chart.bg.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/dist/js/chart.refresh.js" asp-append-version="true"></script>    
}